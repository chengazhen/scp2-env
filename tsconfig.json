{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["*.ts", "**/*.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
} 